
<h1>Thanks for shopping at Jungle, <%= @order.email %></h1>
<p>
  The following is your order summary
</p>
<p>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    <% @cart_total = 0 %>
      <% @order.line_items.each do |item| %>
        <% item_total = item.product.price * item.quantity %>
        <% @cart_total += item_total %>
        <tr>
          <td>
            <h4><%= item.product.name %></h4>
          </td>
          <td>
            <%= item.product.price %>
          </td>
          <td>
            <%= item.quantity %>
          </td>
          <td>
            <%= item_total %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          <%= @cart_total %>
        </th>
      </tr>
    </tfoot>
  </table>
</p>
<p>Thanks for shopping with us and have a great day!</p>
